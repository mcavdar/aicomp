{% extends "dj/base.html" %}
{% block css %}
<link rel="stylesheet" href="{{ MEDIA_URL }}dj/css/colorPicker.css" type="text/css" />
<link rel="stylesheet" type="text/css" href="{{ MEDIA_URL }}dj/css/changelists.css" />
<style type="text/css">
